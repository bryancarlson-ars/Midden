@page "/catalog/zones/{ZoneName}"
@inject Services.StateContainer State

<Breadcrumb Style="margin:16px 0;">
    <BreadcrumbItem>
        <a href="">
            <Icon Type="home" Theme="fill" />
        </a>
    </BreadcrumbItem>
    <BreadcrumbItem>
        <a href="catalog">
            <Icon Type="read" />
        </a>
    </BreadcrumbItem>
    <BreadcrumbItem>
        <a href="catalog/zones">
            <Icon Type="folder" />
        </a>
    </BreadcrumbItem>
    <BreadcrumbItem>
        @ZoneName
    </BreadcrumbItem>
</Breadcrumb>

<div class="site-layout-background">
    <CatalogLoader />
    <PageHeader Class="site-page-header"
                Title="Dataset Catalog"
                Subtitle="Filtered by zone" />
    <FilteredCatalogMetadataViewer Zone="@ZoneName" />
</div>


@code {
    [Parameter]
    public string ZoneName { get; set; }
} 